<div class="ui segment">
  <%= form_for(@pessoa, html: { class: 'ui form' }) do |f| %>
    <%= render partial: 'layouts/errors_messages', locals: { model: @pessoa } %>


    <div class="required eight wide field">
      <%= f.label :nome %>
      <%= f.text_field :nome, class: 'somenteLetras', maxlength: 100 %>
    </div>

    <div class="required eight wide field">
      <%= f.label :apelido %>
      <%= f.text_field :apelido, class: 'somenteLetras', maxlength: 100 %>
    </div>

    <div class="required eight wide field">
      <%= f.label :documento %>
      <%= f.text_field :documento, class: 'somenteLetras', maxlength: 100 %>
    </div>

    <div class="required eight wide field">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'somenteLetras', maxlength: 100 %>
    </div>

    <div class="required eight wide field">
      <%= f.label :telefone %>
      <%= f.text_field :telefone, class: 'somenteLetras', maxlength: 100 %>
    </div>

    <div class="required eight wide field">
      <%= f.label :ativo %>
      <%= f.checkbox :ativo, class: 'somenteLetras', maxlength: 100 %>
    </div>


    <div class="actions">
      <%= link_to t('helpers.links.cancel'), pessoas_path, class: 'ui button floated' %>
      <%= f.submit nil, class: 'ui green button' %>
    </div>
  <% end %>
</div>